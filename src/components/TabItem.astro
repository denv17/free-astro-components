---
interface Props {
  active?: boolean
  children: any
}

const { active } = Astro.props
---

<div
  data-tab-pane
  aria-hidden={active ? 'false' : 'true'}
  role="tabpanel"
  class="ac-tab-pane"
>
  <slot />
</div>

<style>
  .ac-tab-pane {
    display: none;

    &[aria-hidden='false'] {
      display: block;
    }
  }
</style>
